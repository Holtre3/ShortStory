@model IEnumerable<ShortStoryReviewSite.Models.Review>

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by review text: @Html.TextBox("searchCriteria")
        <input type="submit" value="Search"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.UserName).ToString(), "Index", new { sortOrder = "UserName" })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Score).ToString(), "Index", new { sortOrder = "Score" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewText)
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.ReviewDate).ToString(), "Index", new { sortOrder = "ReviewDate" })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

