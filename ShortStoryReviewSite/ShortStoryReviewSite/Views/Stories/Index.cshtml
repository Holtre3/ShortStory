@model IEnumerable<ShortStoryReviewSite.Models.Story>

@{
    ViewBag.Title = "Stories";
}

<h2>Stories</h2>
@using (Html.Begin

())
{
    <div id="FilterSearch" class="form-horizontal">
        <div class="form-group">
            @Html.Label("Search by Name", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("searchCriteria", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Filter" class="btn col-md-2 col-md-offset-2" />
            <input type="button" value="Reset Filter" onclick="location.href='@Url.Action("Index", "Stories")'" class="btn col-md-2 col-md-offset-1" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Title).ToString(), "Index", new { sortOrder = "Title" })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Author).ToString(), "Index", new { sortOrder = "Author" })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Genre).ToString(), "Index", new { sortOrder = "Genre" })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Score).ToString(), "Index", new { sortOrder = "Score" })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.SubmissionDate).ToString(), "Index", new { sortOrder = "SubmissionDate" })
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmissionDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("View", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Reviews", "ListOfReviewsByStory", "Reviews", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
